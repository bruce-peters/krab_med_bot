# Server Settings
APP_NAME=Krab Med Bot API
HOST=0.0.0.0
PORT=5000
LOG_LEVEL=INFO

# Hardware Settings
HARDWARE_MODE=mock
SERVO_CONTROLLER_URL=http://localhost:8080
SERVO_TIMEOUT=5

# Data Settings
DATA_DIR=./data

# CORS Settings (JSON array format)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# AI/LLM Settings
AI_PROVIDER=openai
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here
OLLAMA_BASE_URL=http://localhost:11434

# LLM Model Settings
LLM_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=500

# Speech Settings
STT_PROVIDER=gemini  # gemini, openai, whisper_local, mock
TTS_PROVIDER=local   # local (pyttsx3), openai, elevenlabs, mock
TTS_VOICE=default

# Conversation Settings
CONVERSATION_CONTEXT_WINDOW=10
ENABLE_VOICE_INTERACTION=true
AUTO_SYMPTOM_EXTRACTION=true
